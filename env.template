# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# AssemblyAI API Key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# ==============================================================================
# VIDEO MEETING CONFIGURATION (Twilio Video - SFU Architecture)
# ==============================================================================

# Twilio Video Configuration (Required for video meetings)
# Get your keys from: https://console.twilio.com
# 1. Create a new API Key in Console > Account > API Keys
# 2. Copy the Account SID, API Key SID, and API Key Secret
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_API_KEY_SID=your_twilio_api_key_sid_here
TWILIO_API_KEY_SECRET=your_twilio_api_key_secret_here

# ==============================================================================
# LEGACY P2P VIDEO MEETING CONFIGURATION (Optional - for fallback)
# ==============================================================================

# Pusher Configuration (Optional - for P2P fallback)
# Get your keys from: https://dashboard.pusher.com
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
NEXT_PUBLIC_PUSHER_CLUSTER=us2
PUSHER_APP_ID=your_pusher_app_id_here

# WebRTC Configuration (Optional - for P2P fallback)
NEXT_PUBLIC_STUN_SERVER=stun:stun.l.google.com:19302

# ==============================================================================
# EMAIL NOTIFICATION CONFIGURATION (SMTP)
# ==============================================================================

# SMTP Configuration for email notifications
# For Gmail: Enable "Less secure app access" or use App Passwords
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=your_email@gmail.com
FROM_NAME=MinuteAI

# Optional: Base URL for links in emails (defaults to localhost in dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Secret for cron job authentication (recommended for production)
# Generate with: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here
